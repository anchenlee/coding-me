body{
	margin: 0;
	width: 100%;
	height: 100%; 
	background-color: #f2074c;
	font-family: 黑体;
	font-size: 20px;
	color: #7c4a59;
	font-weight: bold;
}

#content{
	max-width: 100%;
}

#content img{
	width: 100%;
	display: block;
}

#text {
	margin: 0 auto;
	max-width: 100%;
	position: absolute;
	background-color: #E9D9C2;
	padding: 0 10px;
}

#text h1{
	display: block;
	padding: 10px 20px;
	margin: 0;
}

#text p{
	display: block;
	text-indent: 30px;
	line-height: 40px;
	padding: 0 10px;
}

span.red{
	color: #f2074c;
}

span.logo{
	position: relative;
	display: inline-block;
	width: auto;
	padding: 5px 10px;
	margin: 0;
	width: 150px;
}

span.company{
	color: #400009;
}

#middle{
	background-color: #fff;
	padding: 10px 0; 
	border: solid 5px #c4c0ba;
}

#middle img{
	max-width: 150px;
	position: absolute;
	margin-top: -16px;
}

h2{
	display: block;
	float: right;
	color: #f2074c;
}

#footer{
	position: relative;
	margin-left: -10px;
	margin-right: -10px;
}

#foot