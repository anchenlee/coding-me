body{
	margin: 0 auto;
	width: 100%;
	font-family: 黑体;
	font-size: 20px;
	color: #908561;
	font-weight: bold;
	background-color: #fbeec2;
	max-width:640px;
}

#content{
	width: 100%;
}
#text_content{
	padding: 10px;
}
#content img{
	width: 100%;
}

#text{
	margin:0 auto;
}

#text1{
	border-bottom: dotted 3px #eb4c3f;
	padding-bottom: 30px;
	margin: 0 auto;
}

#text2{
	margin: 30px 0;
}

#text3{
	padding-top: 30px;
	border-top: dotted 3px #eb4c3f;
	margin: 0 auto;
}

#title{
	max-width: 115px;
	background: url(images/text_bg.png) repeat;
	color: #fbeec2;
	padding-bottom: 3px;
	padding-top: 1px;
	text-indent: 10px;
	line-height: 35px;
}

p{
	line-height: 25px;
	margin: 0;
	text-indent: 55px;
}

span{
	color: #e93d33;
}

em{
	padding-right: 3px;
	background-color: #e93d33;
	color: #fbeec2;
}

#text4 {
	margin: 10px 0;
	width: 100%;
}

#text4 img{
	display: block;
	max-width: 97%;
	margin: 0 auto;
}

#footer{
	width: 100%
}

#footer img{
	width: 100%;
}