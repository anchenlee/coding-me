var T1 = 200;
var T2 = 100;
var T3 = 300;
/*获取数据前滚动*/
function ani(re){
    var ba = -0.04;
    var Y1 = toPercent(ba*4);
    var Y2 = toPercent(ba*(re-4));
    var Y3 = toPercent(ba*re);
    var t1 = T1*4;
    var t2 = T2*(re-8);
    var t3 = T3*4;
    console.log(Y1+','+Y2);
    $("#animate_ul").css3Animate({
        y: Y1,
        time: t1,
        success: function () {
            $("#animate_ul").css3Animate({
                y: Y2,
                time: t2,
                success: function () {
                    $("#animate_ul").css3Animate({
                        y: Y3,
                        time: t3,
                        callback: function () {
                            var me = re -12;
                            var mesg = msgTrans(12);
                            $("#afui .top").popup({
                                id:"myPopup",
                                message: mesg,
                                cancelOnly: true
                            });
                            $("#myPopup a").click(function() {
                                    $("#myPopup").trigger("close");
                            },1000);
                        }
                    });
                }
            });
        }
    });
}
