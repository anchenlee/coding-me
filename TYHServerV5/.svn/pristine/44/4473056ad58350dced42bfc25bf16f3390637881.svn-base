/* The Nivo Slider styles */
.nivoSlider {
	position:relative;
}
.nivoSlider img {
	position:absolute;
	top:0px;
	left:0px;
}
/* If an image is wrapped in a link */
.nivoSlider a.nivo-imageLink {
	position:absolute;
	top:0px;
	left:0px;
	width:100%;
	height:100%;
	border:0;
	padding:0;
	margin:0;
	z-index:60;
	display:none;
}
/* The slices in the Slider */
.nivo-slice {
	display:block;
	position:absolute;
	z-index:50;
	height:100%;
}
/* Caption styles */
.nivo-caption {
	text-align:center;
	width:200px;
	z-index:2000;
	height: 74px;
	line-height:74px;
	float: left;
}
.nivo-caption p {
	line-height:74px;
	height: 74px;
	text-align:center;
	padding:0;
	margin:0 auto;
	color:#fff;
	overflow: hidden;
}
.nivo-caption a {
	display:inline !important;
}
.nivo-html-caption {
    display:none;
}
/* Direction nav styles (e.g. Next & Prev) */
.nivo-directionNav a {
	position:absolute;
	top:86.5%;
}
.nivo-prevNav {
	z-index:1100;
	cursor:pointer;
	left:585px;
	border: 5px solid #000;
	text-indent: -99999px;
	width: 16px;
	height: 16px;
	transform:rotate(45deg);
	border-top:none;
	border-right: none;
	opacity:0.56;
	filter:alpha(opacity=56); 
}
.nivo-nextNav {
	z-index:1100;
	cursor:pointer;
	right:585px;
	border: 5px solid #000;
	text-indent: -99999px;
	width: 16px;
	height: 16px;
	transform:rotate(45deg);
	border-bottom:none;
	border-left: none;
	opacity:0.56;
	filter:alpha(opacity=56);
}
/* Control nav styles (e.g. 1,2,3...) 导航 导航 导航 导航 导航 导航 导航 导航*/
.nivo-controlNav {
	z-index:1000;
	position:absolute;
	bottom:20px;
	width: 604px;
	margin-left: -302px;
	left: 50%;
	text-align: center;
	background:rgba(0,0,0,.56);
}
.nivo-controlNav img{  /* 缩略导航图样式 */
	width: 85px;
	height: 50px;
	opacity:0.8;
	position: inherit;
}
.nivo-controlNav a {  /* 缩略图导航 */
	float: left;
	text-indent:-9999px;
	border:0;
	padding:8px;
	margin-top:4px;
	cursor:pointer;
	overflow: hidden;
	height:50px;
}
.nivo-controlNav a.active {    /* 当前缩略图导航 样式 */
	overflow: hidden;
	width: 85px;
	height: 50px;
}
.nivo-controlNav a.active img{
	width: 79px;
	height: 44px;
	opacity:1;
	border: 3px solid #ff6900;
}
