<script type="text/javascript">
function submit(){
	var phone_num = $('.enter_phone').val();
	var imei = GetQueryString('imei');
	var uid = GetQueryString('uid');
	if((!isNaN(phone_num)) && (phone_num.length==11)){
		
		$.ajax({
			url:'../turnplate/huafei',
			data:'uid='+uid+'&imei='+imei+'&phone_num='+phone_num,
			type:'POST',
			success:function(ret){
				if(ret == 10){
					alert("广东联通号码，暂不支持充值");
				}else if(ret == 1){
					$('.mask').show();
					$('.chongzhiing').fadeIn();
				}else if(ret == 2){//手机号码已经参与过
					$('.mask').show();
					$('.sjnum_repeat').fadeIn();
				}else if(ret == 3){
					alert('充值失败');
				}else if(ret == 4){ //手机参与过
					$('.mask').show();
					$('.sj_repeat').fadeIn();
				}else{
					alert('你未中奖哦');
				}
			}
		});
	}else{
		alert('输入的手机号码有误!');
	}
}

$(window).resize(function(){
	fontcontrol();
})

$('.chongzhiing').bind('touchstart',function(){//绑定点击事件
	$(this).fadeOut();
	$('.mask').hide();
})
$('.sjnum_repeat').bind('touchstart',function(){//绑定点击事件
	$(this).fadeOut();
	$('.mask').hide();
})
$('.sj_repeat').bind('touchstart',function(){//绑定点击事件
	$(this).fadeOut();
	$('.mask').hide();
})
$('.share_success').bind('touchstart',function(){//绑定点击事件
	$(this).fadeOut();
	$('.mask').hide();
})

function GetQueryString(name){   //获取浏览器的参数
    var reg = new RegExp("(^|&)"+ name +"=([^&]*)(&|$)");
    var r = window.location.search.substr(1).match(reg);
    if(r!=null)return  unescape(r[2]); return null;
}

function init(){
	fontcontrol();
	var imggg = new Image();
	imggg.src = 'images/jfb.png';
	var imgggg = new Image();
	imgggg.src = 'images/mdl.png';
	var code = parseInt(GetQueryString('code'));
	console.info(code);
	switch(code){
		case 10:
			$('.jfb_or_mdl').show();
			$('.jfb_or_mdl').attr('src','images/shixiao.png');
			break;
		case 1:
		case 2:
		case 3:
		case 4:
			$('.jfb_or_mdl').show();
			$('.jfb_or_mdl').attr('src','images/jfb.png');
			$('.jfb_or_mdl').bind('click',function(){
				location.href = "suishou://app.youhui.cn/JFBHistoryPage";
			});
			break;
		case 5:
			$('.phone_charge').show();
			break;
		default:
			break;
	}
}

function fontcontrol(){
	var w = $(window).width();
	font_width = w / 20;
	if(w < 640){
		$('body').css('font-size',font_width+'px');
		$('.enter_phone').css('font-size',font_width+'px');
	}	
}

