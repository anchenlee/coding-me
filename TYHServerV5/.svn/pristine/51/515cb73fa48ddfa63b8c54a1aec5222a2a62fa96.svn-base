package cn.youhui.utils;

/**
 * 文本工具
 * @author lijun
 * @since 2014-4-24
 */
public class TextUtil {

	/**
	 * 文本加上颜色
	 * @param str
	 * @param color
	 * @return
	 */
	public static String addColor(String str, String color){
		if(str == null || "".equals(str)){
			return "";
		}else{
			return "<font color='"+color+"'>" + str +"</font>";
		}
	}
}
