<!DOCTYPE html>
<html>
<head>
  <title>用户吐槽</title>
  <script type="text/javascript" src="js/jquery.js"></script><!--jquery包-->
  <link rel="stylesheet" href="css/style.css"/><!--导入css-->
  <script type="text/javascript" src="js/jquery.lazyload.min.js"></script><!--导入js-->
  <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no"/><!--屏幕自适应-->
  <meta http-equiv="Content-Type" content="text/html;charset=UTF-8"/><!--字体-->
  <meta content="telephone=no" name="format-detection" /><!--忽略识别电话号码-->
  <style type="text/css">
  	.btn{
  		margin:4% 0;
  	}
  	img{
  		display: block;
  		outline: none;
  		-webkit-tap-highlight-color:rgba(0,0,0,0);
  	}
  </style>
</head>
<body>
<img id="titleBg" src="images/shits/welcome.jpg" alt="welcome" />
<div id="shit_content">
	<img class="width100" src="images/shits/evaluate_goods.png" alt="评价商品" />
	<img class="width100 btn" src="images/shits/confirm_goods.jpg" alt="已确认收货" />
	<img class="width100 btn" src="images/shits/no_confirm_goods.jpg" alt="未确认收货" />
	<img style="margin-top: 8%" class="width100" src="images/shits/evaluate_sc.png" alt="评价超级惠" />
	<img class="width100 btn" src="images/shits/goto_shits.jpg" alt="进入吐槽界面" />
</div>
</body>
<script>
var uid = GetQueryString('tyh_web_uid');
$('#shit_content').find('img').eq(1).bind('click',function(){   //跳转已确认收货
	window.location.href='confirm_goods_list.html?uid='+uid;
})

$('#shit_content').find('img').eq(2).bind('click',function(){   //跳转未确认收货
	window.location.href='no_confirm_goods_list.html?uid='+uid;
})

$('#shit_content').find('img').eq(2).bind('click',function(){   //跳转到吐槽页面
	window.location.href='real_shits.html?uid='+uid;
})

function GetQueryString(name){   //获取浏览器的参数
    var reg = new RegExp("(^|&)"+ name +"=([^&]*)(&|$)");
    var r = window.location.search.substr(1).match(reg);
    if(r!=null)return unescape(r[2]); return '';
}
</script>
</html>