    <script type="text/javascript" src="js/bootstrap.min.js"></script>
    <script type="text/javascript" src="js/json_parse.js"></script>
    <script type="text/javascript" src="js/jquery-ui.js"></script>
	<script type="text/javascript" src="js/jquery-ui-slide.min.js"></script>
	<script type="text/javascript" src="js/jquery-ui-timepicker-addon.js"></script>
    <title>后台管理</title>
    <title></title>
</head>
<body>
<div class="panel panel-primary" style="width: 180px;float: left;box-shadow: 0 0 10px #aaa">
    <div class="panel-heading" style="font-size: 24px;line-height: 40px;text-align: center;text-shadow: 0 0 10px #000;">后台管理</div>
    <div class="panel-body" style="font-size: 20px;text-align: center;">
        <a href="itemsugmanage.html">商品信息</a>
    </div>
    <div class="panel-body" style="font-size: 20px;text-align: center">
        <a href="statmanage.html">统计信息</a>
    </div>
    <div class="panel-body" style="font-size: 20px;text-align: center">
        <a href="keyWord.html">关键字查询</a>
    </div>
    <div class="panel-body" style="font-size: 20px;text-align: center">
        <a href="showGoods.html">商品库管理</a>
    </div>
</div>
<div class="panel panel-default main-panel" id="content" style="width: 1200px">
    <div class="panel-heading">
        <h1 style="display: inline;" class="panel-title">关键字查询</h1>
    </div>
    <div class="panel-body" style="position: relative;">
       <!-- <label class="control-label">KeyWord:</label>-->
        <input type="text" id="keyword" class="form-control" placeholder="关键字" style="width: 200px;vertical-align: top">
        <!--<label class="control-label">day:</label>-->
        <input type="text" id="day" class="form-control"  placeholder="日期格式：2014-09-01" style="width: 200px;vertical-align: top">
        <button id="button" class="btn btn-primary" onclick="ol()" style="width: 100px;display: inline-block;vertical-align: top">提交</button>
        <table class="table">
        </table>
    </div>
</div>
</body>
<!--设置页面高度-->
<script type="text/javascript">
    $(document).ready(function(){
        var height = $(window).height();
        //alert(height);
        if(height>760){
            $('.panel-primary').height(height);
        }
        else{
            $('.panel-primary').height(760);
        }
        $('#day').datetimepicker({
        	timeFormat:''
        });
    });

    function ol(){
        $('.table').empty();
        var keyword = $('#keyword').val();
        var day = $('#day').val();
        var data='';
        data = '<tr><th>key</th><th>count</th><th>name</th><th>cat</th><th>day</th></tr>';
        $.ajax({
            url:'FetchKeywordStat',
            data:'keyword='+keyword+'&day='+day,
            type:'post',
            success:function(ret){
                var parseRe = JSON.parse(ret);
                for(var i=0;i<parseRe.length;i++){
                    data+='<tr><td>'+parseRe[i].key+'</td><td>'+parseRe[i].count+'</td><td>'+parseRe[i].name+'</td><td>'+parseRe[i].cat+'</td><td>'+parseRe[i].day+'</td></tr>'
                }
                $('.table').append(data);
            }
        });
    }
</script>
</html>