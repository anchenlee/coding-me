/* =Global
----------------------------------------------- */
body,
input,
textarea,
button {
	font: 12px/20px "microsoft yahei", Helvetica, Arial, sans-serif;
}
body {
	background: #f0f0f0;
	color: #777;
    font-family: "microsoft yahei";
}
h1,h2,h3,h4,h5,h6 {
	font-weight: normal;
	padding: 0;
}
h1 {
	font-size: 24px;
	line-height: 28px;
    font-family: "microsoft yahei";
}
h2 {
	font-size: 20px;
	line-height: 22px;
	margin: 0;
}
h3 {
	font-size: 16px;
	line-height: 20px;
}
h4 {
	font-size: 14px;
	line-height: 18px;
	margin-bottom: 15px;
}
h5 {
	font-size: 12px;
	line-height: 18px;
}
h6 {
	font-size: 10px;
	line-height: 16px;
}
p {
	margin: 0;
	padding: 0;
}

/* Links */
a {
	color: #777;
	text-decoration: none;
}
a:hover {
	text-decoration: none;
}
a img {
	border: none;
}
/* Standard Styles */
.hidden {
	display: none;
}

#warp{
    float: left;
    overflow: auto;
    margin: 20px 80px;
    background: #fff;
    padding: 5px;
    border: 1px solid #ccc;
}
#content{
    float: left;
    overflow: auto;
    margin: 50px;
    background: #fff;
    /*padding: 5px;*/
    border: 1px solid #ccc;
}
#day, #month, #type,#keyword,#day{
    width: 120px;
    display: inline-block;
    margin-left: 50px;
}
#placeholder{
    width:1080px;
    height:600px;
    border: 1px solid #000;
    background: azure;
    margin: 50px;
}
#detailMon{
    width: 1080px;
    font-size: 14px;
    margin: 0 auto;
}
#detailDate{
    width: 1080px;
    font-size: 14px;
    margin: 0 auto;
}
span{
    border: 1px solid #000;
    padding:10px;
    width:100px;
    display: inline-block;
    text-align: center;
}
p{margin: 30px;display: block;}